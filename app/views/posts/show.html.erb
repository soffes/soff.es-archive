<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Permalink:</strong>
  <%=h @post.permalink %>
</p>
<p>
  <strong>Body:</strong>
  <%=h @post.body %>
</p>
<p>
  <strong>Type:</strong>
  <%=h @post.type %>
</p>
<p>
  <strong>Published At:</strong>
  <%=h @post.published_at %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
