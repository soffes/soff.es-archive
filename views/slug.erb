<% if slug['type'] == 'post' %>
<article>
  <header>
    <h2><a href="/<%= slug['key'] %>"><%= slug['title'] %></a></h2>
    <% if slug['published_at'] && published_at = Time.at(slug['published_at'].to_i) %>
    <p>Posted on <time datetime="<%= published_at.strftime('%Y-%m-%dT%H:%M:%SZ') %>"><%= published_at.strftime('%B %e, %Y') %></time></p>
    <% end %>
  </header>
  <%= slug['html'] %>
</article>
<% else %>
<section class="page <%= slug['key'] %>">
  <header>
    <h2><a href="/<%= slug['key'] %>"><%= slug['title'] %></a></h2>
  </header>
  <%= slug['html'] %>
</section>
<% end %>

<% slug['javascripts'] and slug['javascripts'].each do |javascript| %>
<script src="/assets/<%= javascript %>.js"></script>
<% end %>
